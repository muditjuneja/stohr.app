<div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
  <a href="#">
    <img class="hover:grow hover:shadow-lg" src="{{ product.img }}">
    <div class="pt-3 flex items-center justify-between">
      <p>{{ product.Title }}</p>
      <button class="px-3 py-1 bg-blue-500 text-white text-xs font-bold uppercase rounded hover:bg-blue-700"
        onclick="addToCart({{ product | jsonStringify }})">Query Now</button>
    </div>
  </a>
</div>
